<Window x:Class="NotepadEx.Windows.ThemeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotepadEx.Windows"        
        xmlns:UserControls="clr-namespace:NotepadEx.MVVM.View.UserControls"
        mc:Ignorable="d"
        Title="ThemeEditorWindow" Height="450" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style TargetType="Expander">
            <Setter Property="Foreground" Value="{DynamicResource Color_ToolWindowFont}"></Setter>
        </Style>
    </Window.Resources>
    <Grid Background="{DynamicResource Color_ToolWindowBg}">
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="18"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <UserControls:CustomTitleBar x:Name="ThemeEditorTitleBar" DataContext="{Binding TitleBarViewModel}"></UserControls:CustomTitleBar>
        <Menu Grid.Row="1" Background="{DynamicResource Color_MenuBarBg}">
            <MenuItem Name="MenuItem_File" Header="File" Foreground="{DynamicResource Color_MenuItemFg}">
                <MenuItem Header="Save" Foreground="{DynamicResource Color_MenuItemFg}" Click="MenuItemSave_Click"></MenuItem>
            </MenuItem>
            <MenuItem Name="MenuItem_CopyFrom" Header="Copy From" Foreground="{DynamicResource Color_MenuItemFg}">
                <MenuItem Header="Test Checked" IsChecked="True" Foreground="{DynamicResource Color_MenuItemFg}">
                    <MenuItem Header="Test CheckedChild" Foreground="{DynamicResource Color_MenuItemFg}"/>
                    <MenuItem Header="Test CheckedChild2" IsChecked="True" Foreground="{DynamicResource Color_MenuItemFg}"/>
                    <MenuItem Header="Test CheckedChild2" IsEnabled="False" IsChecked="True" Foreground="{DynamicResource Color_MenuItemFg}"/>

                </MenuItem>
            </MenuItem>
        </Menu>
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Name="stackPanelMain" Background="Transparent">
                <Expander Name="ExpanderMain" Header="Main">
                        <StackPanel Name="StackPanelMain" HorizontalAlignment="Center" Width="280"></StackPanel>
                    </Expander>
                    
                    <Expander Name="ExpanderMenuBar" Header="Menu Bar">
                        <StackPanel Name="StackPanelMenuBar" HorizontalAlignment="Center"></StackPanel>
                    </Expander>
                    
                    <Expander Name="ExpanderInfoBar" Header="Info Bar">
                        <StackPanel Name="StackPanelInfoBar" HorizontalAlignment="Center"></StackPanel>
                    </Expander>
                    
                    <Expander Name="ExpanderMenuItem" Header="Menu Item">
                        <StackPanel Name="StackPanelMenuItem" HorizontalAlignment="Center"></StackPanel>
                    </Expander>

                <Expander Name="ExpanderToolWindow" Header="Tool Windows">
                    <StackPanel Name="StackPanelToolWindow" HorizontalAlignment="Center"></StackPanel>
                </Expander>
            </StackPanel>
            </ScrollViewer>
    </Grid>
</Window>
