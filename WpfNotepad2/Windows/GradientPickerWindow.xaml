<Window x:Class="NotepadEx.Windows.GradientPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotepadEx.Windows"
        mc:Ignorable="d"
        Title="GradientPickerWindow" Height="650" Width="720"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Gradient Preview -->
        <Rectangle Grid.Row="0" Height="100" Margin="10">
            <Rectangle.Fill>
                <LinearGradientBrush x:Name="GradientPreview"/>
            </Rectangle.Fill>
        </Rectangle>




        <!-- Start and End Position Controls -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Start:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                <TextBlock Text="X:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Slider x:Name="StartXSlider" Width="100" Minimum="0" Maximum="1" Value="0" ValueChanged="PositionSlider_ValueChanged"/>
                <TextBlock Text="{Binding ElementName=StartXSlider, Path=Value, StringFormat={}{0:F2}}" VerticalAlignment="Center" Margin="5,0,10,0"/>
                <TextBlock Text="Y:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Slider x:Name="StartYSlider" Width="100" Minimum="0" Maximum="1" Value="1" ValueChanged="PositionSlider_ValueChanged"/>
                <TextBlock Text="{Binding ElementName=StartYSlider, Path=Value, StringFormat={}{0:F2}}" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>

            <TextBlock Text="End:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal">
                <TextBlock Text="X:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Slider x:Name="EndXSlider" Width="100" Minimum="0" Maximum="1" Value="1" ValueChanged="PositionSlider_ValueChanged"/>
                <TextBlock Text="{Binding ElementName=EndXSlider, Path=Value, StringFormat={}{0:F2}}" VerticalAlignment="Center" Margin="5,0,10,0"/>
                <TextBlock Text="Y:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Slider x:Name="EndYSlider" Width="100" Minimum="0" Maximum="1" Value="0" ValueChanged="PositionSlider_ValueChanged"/>
                <TextBlock Text="{Binding ElementName=EndYSlider, Path=Value, StringFormat={}{0:F2}}" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Angle Slider -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            
            <TextBlock Text="Angle:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Slider x:Name="SliderAngle" Width="160" Minimum="0" Maximum="360" Value="0" Margin="0,0,5,0" ValueChanged="SliderAngle_ValueChanged"/>
            <TextBlock Text="{Binding ElementName=SliderAngle, Path=Value, StringFormat={}{0:F0}°}" VerticalAlignment="Center" Margin="5,0,10,0"/>
            
            <TextBlock Text="Offset X:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Slider x:Name="SliderOffsetX" Width="160" Minimum="-2" Maximum="2" Value="0" Margin="0,0,5,0" ValueChanged="SliderOffsetX_ValueChanged"/>

            <TextBlock Text="Offset Y:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Slider x:Name="SliderOffsetY" Width="160" Minimum="-2" Maximum="2" Value="0" ValueChanged="SliderOffsetY_ValueChanged"/>
        </StackPanel>


      


        <!-- Scale Slider -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="10">


            <TextBlock Text="Scale X:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Slider x:Name="SliderScaleX" Width="180" Minimum="-3" Maximum="3" Value="0" Margin="0,0,5,0" ValueChanged="SliderScaleX_ValueChanged"/>

            <TextBlock Text="Scale Y:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Slider x:Name="SliderScaleY" Width="180" Minimum="-3" Maximum="3" Value="0" ValueChanged="SliderScaleY_ValueChanged"/>
        </StackPanel>


        <!-- Gradient Stops -->
        <ListBox Grid.Row="4" x:Name="StopsListBox" Margin="10" d:ItemsSource="{d:SampleData ItemCount=9}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                   

                        <Slider Maximum="1" Width="490" Grid.Column="1" Value="{Binding Offset, Mode=TwoWay}" ValueChanged="StopSlider_ValueChanged"/>
                        <Rectangle x:Name="ColorPreviewForStop" Width="20" Height="20" Margin="0,0,5,0">
                            <Rectangle.Fill>
                                <SolidColorBrush x:Name="ColorPreviewForStopBrush" Color="{Binding Color}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Button Content="Edit" Grid.Column="2" Margin="5,0,0,0" Click="EditStop_Click"/>
                        <Button Content="Copy" Grid.Column="3" Margin="5,0,0,0" Click="CopyStop_Click" Tag="{Binding ElementName=ColorPreviewForStop}"/>
                        <Button Content="Paste" Grid.Column="4" Margin="5,0,0,0" Click="PasteStop_Click" Tag="{Binding ElementName=ColorPreviewForStop}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        
        
        <!-- Controls -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Add Stop" Click="AddStop_Click" Margin="0,0,5,0"/>
            <Button Content="Remove Stop" Click="RemoveStop_Click" Margin="5,0,0,0"/>
        </StackPanel>
        <!-- Confirm and Cancel buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Cancel" Click="CancelButton_Click" Margin="5,0,0,0"/>
            <Button Content="Confirm" Click="ConfirmButton_Click" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>