<Window x:Class="WpfNotepad2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfNotepad2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        ShowInTaskbar="True"
        Closing="Window_Closing">

    <Grid>
        <Border x:Name="OutlineBorder" BorderThickness="1" BorderBrush="Gray" CornerRadius="0" Background="White" MouseLeftButtonDown="Border_MouseLeftButtonDown" MouseMove="Border_MouseMove">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="26"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Custom Title Bar-->
                <Grid Background="#202222">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Name="txtTitleBar" Text="NotepadEx" Foreground="AliceBlue" FontFamily="Consolas" FontSize="20" Margin="4 0 0 0" MouseDown="txtTitleBar_MouseDown"/>
                    <Button Name="btnMinimize" Background="Transparent" Foreground="AliceBlue" Grid.Column="1" HorizontalAlignment="Right" Content="-" Width="30" Click="btnMinimize_Click"></Button>
                    <Button Name="btnExit" Background="Transparent" Foreground="AliceBlue" Grid.Column="2" HorizontalAlignment="Right" Content="X" Width="30" Click="btnExit_Click"></Button>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="Row_MainMenuBar" Height="20"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition x:Name="Row_InfoBar" Height="20"/>
                    </Grid.RowDefinitions>
                    
                    <Menu Name="MainMenuBar" IsMainMenu="True" Background="#FF343738">
                        <MenuItem Name="DropDown_File" Header="File" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}">
                            <MenuItem Header="New" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemNew_Click"></MenuItem>
                            <MenuItem Header="New Window..." Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemNewWindow_Click"></MenuItem>
                            <MenuItem Header="Open..." Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemOpen_Click"></MenuItem>
                            <MenuItem Name="MenuItem_OpenRecent"  Header="Open Recent" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemOpenRecent_Click">
                                <MenuItem Header="..." Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" ></MenuItem>
                            </MenuItem>
                            <MenuItem Header="Open Multiple Files As One..." Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemMultiOpen_Click"/>
                            <MenuItem Header="Print" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemPrint_Click"/>
                            <MenuItem Header="Save" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemSave_Click"/>
                            <MenuItem Header="Save as..." Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemSaveAs_Click"/>
                            <MenuItem Header="Exit" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemExit_Click"/>
                        </MenuItem>
                        
                        <MenuItem Header="Edit" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}">
                            <MenuItem Header="Undo" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemUndo_Click"/>
                            <MenuItem Header="Redo" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemRedo_Click"/>
                            <MenuItem Header="Copy" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemCopy_Click"/>
                            <MenuItem Header="Cut" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemCut_Click"/>
                            <MenuItem Header="Paste" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemPaste_Click"/>
                            <MenuItem Header="Delete" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemDelete_Click"/>
                            <MenuItem Header="Find and Replace..." Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemFindReplace_Click"/>
                            <MenuItem Header="Select All" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemSelectAll_Click"/>
                            <MenuItem Header="Insert Time/Date" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemTimeDate_Click"/>
                        </MenuItem>
                        
                        <MenuItem Header="Preferences" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}">
                            <MenuItem Header="Font..." Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemFont_Click"/>
                            <MenuItem Name="MenuItem_ToggleWrapping" Header="Toggle Word Wrapping" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemWordWrap_Click"/>
                            <MenuItem Name="MenuItem_AutoHideMenuBar" Header="Auto Hide Menu Bar" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemAutohideMenuBar_Click"/>
                            <MenuItem Name="MenuItem_ToggleInfoBar" Header="Show Info Bar" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemToggleInfoBar_Click"/>
                        </MenuItem>
                        
                        <MenuItem Header="Theme" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" Click="MenuItemTheme_Click">
                            <MenuItem Header="Test Theme 1" Foreground="{StaticResource MenuItemForeground}" Style="{Binding SubmenuItemTemplateKey}" />
                        </MenuItem>
                    </Menu>

                    <TextBox x:Name="txtEditor"
                             Grid.Row="1"
                             AcceptsReturn="True"
                             FontSize="18"
                             FontFamily="Segoe UI"
                             TextOptions.TextRenderingMode="ClearType"
                             Margin="2 2 2 2"
                             BorderBrush="Transparent"
                             BorderThickness="0"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             MouseMove="txtEditor_MouseMove"></TextBox>
                    
                    <TextBlock x:Name="txtStatus" Margin="4 0" FontFamily="Verdana" FontSize="12" FontWeight="SemiBold" Text="Lines" VerticalAlignment="Center" Grid.Row="2"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
